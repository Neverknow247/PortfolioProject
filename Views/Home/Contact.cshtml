<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div id="header">
        <p><a href="/">Home</a> | <a href="/projects">Projects</a> | Contact</p>
    </div>
    <div id="main">
        <h1>Contact Me</h1>
        <form action="/" method="POST">
            @* {% csrf_token %} *@
            <div class="article">
                <div class="section">
                    <p>Input Fields</p>
                    <p>Name <input type="text" name="name"</p>
                    <p>Email <input type="email" name="email"></p>
                </div>
                <div class="section">
                    <p>Message</p>
                    <p><textarea name="" id="" cols="30" rows="10"></textarea></p>
                </div>
            </div>
            <button type="submit">Submit</button>
        </form>
        </div>
    </div>
</body>
</html>